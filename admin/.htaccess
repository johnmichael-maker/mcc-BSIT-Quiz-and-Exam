RewriteEngine On

# Remove the .php extension from URLs within the admin folder
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^admin/(.*)$ /admin/$1.php [L]

# Redirect URLs that include the .php extension to clean URLs
RewriteCond %{THE_REQUEST} \s/admin/(.+)\.php[\s?]
RewriteRule ^admin/(.*)$ /admin/$1 [R=301,L]
