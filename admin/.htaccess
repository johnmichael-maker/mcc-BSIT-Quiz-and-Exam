# Enable mod_rewrite engine
RewriteEngine On
RewriteBase /

# Redirect old .php URLs to clean URLs
RewriteCond %{THE_REQUEST} \s/([a-zA-Z0-9_-]+)\.php[\s?] [NC]
RewriteRule ^([a-zA-Z0-9_-]+)\.php$ /$1 [R=301,L]

# Remove .php extension for access-control.php
RewriteCond %{REQUEST_FILENAME} !-f             # Ensure it's not a real file
RewriteCond %{REQUEST_FILENAME} !-d             # Ensure it's not a real directory
RewriteRule ^access-control$ admin/access-control.php [L]
