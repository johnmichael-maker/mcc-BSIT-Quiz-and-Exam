# Enable mod_rewrite
RewriteEngine On

# Check if the request is not for an existing file
RewriteCond %{REQUEST_FILENAME} !-f

# Check if the request is not for an existing directory
RewriteCond %{REQUEST_FILENAME} !-d

# Internally rewrite access-control to access-control.php
RewriteRule ^access-control$ /access-control.php [L]

# Redirect .php to clean URL (if user tries to access .php directly)
RewriteCond %{THE_REQUEST} \s/([a-zA-Z0-9_-]+)\.php\s [NC]
RewriteRule ^([a-zA-Z0-9_-]+)\.php$ /$1 [R=301,L]
