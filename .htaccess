# Enable mod_rewrite
RewriteEngine On

# Remove .php extension for all files in all directories
RewriteCond %{REQUEST_FILENAME} !-d                  # Check if it is not a directory
RewriteCond %{REQUEST_FILENAME}.php -f               # Check if the file with .php extension exists
RewriteRule ^(.*[^/])$ $1.php [L,QSA]                # Rewrite URL to add .php
