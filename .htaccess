# Enable mod_rewrite for the entire site
RewriteEngine On

# Ensure that .php files are rewritten to clean URLs (without .php)
RewriteCond %{REQUEST_FILENAME} !-d              # Don't rewrite directories
RewriteCond %{REQUEST_FILENAME} !-f              # Don't rewrite existing files (e.g., images, CSS)
RewriteRule ^(admin/login|app/submit_instructor|app/submit_registration|index|about|contact|step_instructor|step_register|step-123|student-signup|submit_instructor|submit_registration|login)$ $1.php [NC,L]

# Redirect .php URLs to clean URLs (without .php) for SEO purposes
RewriteCond %{THE_REQUEST} \s/([^/]+)\.php [NC]  # Look for .php in the request URL
RewriteRule ^([^/]+)\.php$ /$1 [R=301,L]         # Redirect .php URLs to clean URLs without .php

# Handle specific subdirectories like /admin and /app
RewriteRule ^admin/login$ admin/login.php [NC,L]
RewriteRule ^app/(submit_instructor|submit_registration)$ app/$1.php [NC,L]
