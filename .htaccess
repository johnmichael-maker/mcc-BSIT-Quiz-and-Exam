# Enable mod_rewrite engine
RewriteEngine On

# Prevent direct access to the home page ("/")
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ - [F,L]  # Or modify based on need

# Do not apply rewrites to existing directories or files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Allow direct access to specific PHP files
RewriteRule ^([a-zA-Z0-9_-]+\.php)$ $1 [NC,L]

# General rewrite rules for URLs that need to be processed as PHP
RewriteRule ^(admin/login|admin/otherpage|index|about|contact|register_instructor|step_register|login)$ $1.php [NC,L]

# Redirect .php URLs to clean URLs (for SEO purposes)
RewriteCond %{THE_REQUEST} \s/([^/]+)\.php [NC]
RewriteRule ^([^/]+)\.php$ /$1 [R=301,L]

# Rewrite for specific files within the 'admin' directory (to remove .php)
RewriteRule ^admin/login$ admin/login.php [NC,L]
RewriteRule ^admin/([a-zA-Z0-9_-]+)$ admin/$1.php [NC,L]

# Ensure that base URLs work without the .php extension
RewriteRule ^(index|about|contact|register_instructor|step_register|login)$ $1.php [NC,L]

# Prevent rewrites for URLs containing '?token='
RewriteCond %{QUERY_STRING} !token= [NC]
RewriteRule ^(.*)$ - [L]
